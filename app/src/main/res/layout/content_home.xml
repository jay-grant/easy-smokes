<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/HomeActivity_RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crayon.easysmokes.HomeActivity"
    android:background="@drawable/shape_background_gradient">

    <View
        android:id="@+id/centre_anchor"
        android:layout_width="0dp"
        android:layout_height="90sp"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_above="@id/centre_anchor"
        android:layout_marginBottom="60sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name_spaced"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="18pt"/>

    <LinearLayout
        android:layout_alignTop="@id/centre_anchor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/HomeActivity_LinearLayout">
    </LinearLayout>

</RelativeLayout>
