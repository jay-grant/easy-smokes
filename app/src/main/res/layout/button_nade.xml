<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/nade_button_main"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/nade_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_spaced"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:paddingStart="16sp"
            android:paddingEnd="16sp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/nade_button_fav"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16sp" />

    <Button
        android:id="@+id/nade_button_line"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@drawable/shape_gradient_fade_grey"
        android:layout_marginTop="119sp" />

</RelativeLayout>