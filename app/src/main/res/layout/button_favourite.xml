<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favnade_button_main"
    android:layout_width="match_parent"
    android:layout_height="120sp"
    android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/favnade_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_spaced"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:paddingStart="16sp"
            android:paddingEnd="16sp"/>

        <TextView
            android:id="@+id/favnade_secondarytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_spaced"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingStart="16sp"
            android:paddingEnd="16sp"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/favnade_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="32sp"
            app:buttonTint="@color/white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/favnade_button_line"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@drawable/shape_gradient_fade_grey"
            android:layout_marginTop="119sp" />

</RelativeLayout>