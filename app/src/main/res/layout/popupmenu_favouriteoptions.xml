<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/favOptionsPrimary"
    android:layout_margin="0sp"
    android:gravity="start">

    <RelativeLayout
        android:id="@+id/FavouriteOption_order"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16sp"
            android:text="@string/favoption_order"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:padding="16sp"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/ic_expand_more_white"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/FavouriteOption_group"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16sp"
            android:text="@string/favoption_group"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:padding="16sp"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/ic_expand_more_white"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/FavouriteOption_remove"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16sp"
            android:text="@string/favoption_remove"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:padding="16sp"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@android:drawable/ic_delete"/>
    </RelativeLayout>

</LinearLayout>
